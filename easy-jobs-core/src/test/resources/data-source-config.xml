<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
            <value>database.properties</value>
        </property>
    </bean>
    <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
        <property name="url" value="${easy.jobs.h2.url}"/>
        <property name="user" value="${easy.jobs.h2.user}"/>
        <property name="password" value="${easy.jobs.h2.password}"/>
    </bean>
    <bean id="hibernateDialect" class="java.lang.String">
        <constructor-arg value="org.hibernate.dialect.H2Dialect"/>
    </bean>
</beans>